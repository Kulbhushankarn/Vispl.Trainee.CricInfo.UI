@model Vispl.Trainee.CricInfo.VO.Cls_Login_VO

@{
    ViewBag.Title = "Login";
}

<link href="~/Content/FormCss/LoginSheet1.css" rel="stylesheet" />

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="login-container">

        <div class="svg-container">
            <img src="~/Content/Images/Computer login-amico.svg" alt="Logo" />
        </div>

        <div class="form-container">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-4 col-lg-3" })
                    <div class="col-md-8 col-lg-9">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-4 col-lg-3" })
                    <div class="col-md-8 col-lg-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8 col-lg-offset-3 col-lg-9">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
